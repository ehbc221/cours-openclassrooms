{# src/OC/CoreBundle/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title>{% block title %}OC Plateforme{% endblock %}</title>

		{% block stylesheets %}
			<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
		{% endblock %}
	</head>

	<body>

	<div class="container">

		<div id="header" class="jumbotron">
			<h1>Ma première activité</h1>
			<p>
				Ce projet est propulsé par Symfony2,
				et construit grâce au MOOC OpenClassrooms et SensioLabs.
			</p>
			<p>
				<a class="btn btn-primary btn-lg" href="https://openclassrooms.com/courses/developpez-votre-site-web-avec-le-framework-symfony2">
					Participer au MOOC »
				</a>
			</p>
		</div>

		<div class="row">

			<div id="menu" class="col-xl-2 col-md-3 col-xs-4">
				{% block menu %}
					<h3>Menu</h3>
					<ul class="nav nav-pills nav-stacked">
						<li><a href="{{ path('oc_core_home') }}">Accueil</a></li>
						<li><a href="{{ path('oc_platform_home') }}">Annonces</a></li>
						<li><a href="{{ path('oc_core_contact') }}">Contact</a></li>
					</ul>
				{% endblock %}
			</div>

			<div id="content" class="col-xl-10 col-md-9 col-xs-8">
				{% block body %}
					<h1>Page d'accueil</h1>
					<hr>
				{% endblock %}
			</div>

		</div>

		<hr>

		<footer>
			<p class="text-center">The sky's the limit © {{ 'now'|date('Y') }} and beyond.</p>
		</footer>

	</div>

	{% block javascripts %}
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
		<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
	{% endblock %}

	</body>
</html>
